font-family = "ComicCodeLigatures Nerd Font"
theme = light:Catppuccin Latte,dark:Catppuccin Macchiato
background-opacity = 0.75
background-blur = true
macos-titlebar-style = tabs
cursor-style = block
quick-terminal-size = 800px

keybind = ctrl+s>r=reload_config

keybind = ctrl+s>c=new_tab

# Tabs
keybind = ctrl+shift+h=previous_tab
keybind = ctrl+shift+l=next_tab
keybind = ctrl+s>q=close_tab

# Splits
keybind = ctrl+s>h=new_split:left
keybind = ctrl+s>j=new_split:down
keybind = ctrl+s>k=new_split:up
keybind = ctrl+s>l=new_split:right
keybind = cmd+h=goto_split:left
keybind = cmd+j=goto_split:down
keybind = cmd+k=goto_split:up
keybind = cmd+l=goto_split:right
keybind = ctrl+enter=toggle_split_zoom
keybind = cmd+ctrl+h=resize_split:left,10
keybind = cmd+ctrl+j=resize_split:down,10
keybind = cmd+ctrl+k=resize_split:up,10
keybind = cmd+ctrl+l=resize_split:right,10


keybind = global:cmd+'=toggle_quick_terminal
