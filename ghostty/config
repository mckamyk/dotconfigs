font-family = "ComicCodeLigatures Nerd Font"
theme = light:Catppuccin Latte,dark:Catppuccin Macchiato
background-opacity = 0.85
background-blur = true
macos-titlebar-style = hidden
cursor-style = block
shell-integration-features = no-cursor
quick-terminal-size = 800px
custom-shader = shaders/cursor_warp.glsl

# Send Cmd as Alt sequences for tmux
keybind = cmd+h=send-text:\x1bh
keybind = cmd+j=send-text:\x1bj
keybind = cmd+k=send-text:\x1bk
keybind = cmd+l=send-text:\x1bl

keybind = cmd+left=send-text:\x1b[1;3D
keybind = cmd+down=send-text:\x1b[1;3B
keybind = cmd+up=send-text:\x1b[1;3A
keybind = cmd+right=send-text:\x1b[1;3C

keybind = cmd+ctrl+h=send-text:\x1b[1;7D
keybind = cmd+ctrl+j=send-text:\x1b[1;7B
keybind = cmd+ctrl+k=send-text:\x1b[1;7A
keybind = cmd+ctrl+l=send-text:\x1b[1;7C

keybind = global:cmd+'=toggle_quick_terminal
